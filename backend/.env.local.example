# Node server
PORT=8787
SERVE_DASHBOARD=false
FRONTEND_DIST_DIR=../dashboard/dist
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_MS=60000

# MariaDB
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=smartlamp_local
DB_CONNECTION_LIMIT=10

# Security
JWT_SECRET=dev-local-jwt-secret-change-this
HMAC_GLOBAL_FALLBACK_SECRET=dev-local-hmac-secret-change-this

# MQTT (HiveMQ / broker lain)
MQTT_WS_URL=wss://your-cluster.s1.eu.hivemq.cloud:8884/mqtt
MQTT_USERNAME=replace-with-username
MQTT_PASSWORD=replace-with-password
MQTT_CLIENT_ID_PREFIX=smartlamp-worker-local

# Auth/session/cors
JWT_ACCESS_TTL_SEC=900
JWT_REFRESH_TTL_SEC=2592000
COOKIE_SECURE=false
COOKIE_SAME_SITE=Strict
COOKIE_DOMAIN=
CORS_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# Rate limit
AUTH_LOGIN_RATE_LIMIT_MAX=8
AUTH_LOGIN_RATE_LIMIT_WINDOW_SEC=60
COMMAND_SIGN_RATE_LIMIT_MAX=30
COMMAND_SIGN_RATE_LIMIT_WINDOW_SEC=60

