{
  "name": "smartlamp-monorepo",
  "private": true,
  "scripts": {
    "install:all": "bash ./scripts/install-all.sh",
    "env:local": "bash ./scripts/env-local.sh",
    "migrate:local": "bash ./scripts/migrate-local.sh",
    "migrate:remote": "bash ./scripts/migrate-remote.sh",
    "setup:local": "bash ./scripts/setup-local.sh",
    "dev": "bash ./scripts/dev.sh",
    "dev:backend": "npm --prefix backend run dev",
    "dev:dashboard": "npm --prefix dashboard run dev -- --host 127.0.0.1 --port 5173",
    "typecheck": "npm --prefix backend run typecheck",
    "test": "npm --prefix backend run test",
    "build": "bash ./scripts/build-all.sh",
    "deploy:worker": "bash ./scripts/deploy-worker.sh",
    "deploy:pages": "bash ./scripts/deploy-pages.sh",
    "deploy": "bash ./scripts/deploy-all.sh"
  }
}
